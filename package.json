{
  "name": "@minko-fe/any-config",
  "version": "0.0.0",
  "private": true,
  "description": "Minko's project config âœ…",
  "type": "module",
  "keywords": [
    "eslint",
    "commitlint",
    "tsconfig",
    "prettier",
    "config"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/any-config.git"
  },
  "author": "hemengke1997 <https://github.com/hemengke1997>",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/*\" build",
    "lint": "eslint . --fix",
    "up": "taze -r -w -I",
    "postinstall": "simple-git-hooks",
    "changeset": "changeset",
    "version": "changeset version && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "@commitlint/cli": "^19.8.1",
    "@minko-fe/commitlint-config": "workspace:*",
    "@minko-fe/eslint-config": "workspace:*",
    "@minko-fe/prettier-config": "workspace:*",
    "@minko-fe/tsconfig": "workspace:*",
    "@types/node": "^22.15.17",
    "eslint": "^9.26.0",
    "importx": "^0.5.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.3.3",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint",
    "commit-msg": "npx commitlint -e"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@minko-fe/prettier-config",
  "commitlint": {
    "extends": [
      "@minko-fe"
    ]
  }
}
